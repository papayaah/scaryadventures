{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "scary-adventures",
  "permissions": {
    "redis": true
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "src/client/public/assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create Game Post",
        "description": "Create a new Scary Adventures game post",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/create-post"
      },
      {
        "label": "View Game Analytics",
        "description": "View story completion rates, ratings, and player statistics",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/view-stats"
      }
    ]
  },
  "forms": {
    "analyticsDisplay": "/internal/form/analytics-close"
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "ScaryAdventures"
  }
}