{
  "$schema": "https://developers.reddit.com/schema/config-file.v1.json",
  "name": "scary-adventures",
  "permissions": {
    "redis": true
  },
  "post": {
    "dir": "dist/client",
    "entrypoints": {
      "default": {
        "entry": "index.html"
      }
    }
  },
  "server": {
    "dir": "dist/server",
    "entry": "index.cjs"
  },
  "media": {
    "dir": "src/client/public/assets"
  },
  "menu": {
    "items": [
      {
        "label": "Create a new post",
        "description": "scary-adventures",
        "location": "subreddit",
        "forUserType": "moderator",
        "endpoint": "/internal/menu/post-create"
      }
    ]
  },
  "triggers": {
    "onAppInstall": "/internal/on-app-install"
  },
  "dev": {
    "subreddit": "scary_adventures_dev"
  }
}